<h1>キャンプ場一覧</h1>
<a href="/campgrounds/new" class="btn btn-secondary">新規登録</a>

<div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
  <% for(item of data) { %>
  <div class="col">
    <div class="card h-100">
      <img
        src="https://picsum.photos/400/300?<%= item.id %>"
        class="card-img-top object-fit-cover h-auto"
        alt=""
        width="400"
        height="300"
      />
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= item.title %></h5>
        <p class="card-text"><%= item.description %></p>
        <a href="/campgrounds/<%= item.id %>" class="btn btn-primary mt-auto"
          >View</a
        >
      </div>
    </div>
  </div>
  <% } %>
</div>
