<div class="container overflow-hidden">
  <div class="row gx-5">
    <div class="col">
      <div class="">
        <h2><%= data.title %></h2>
        <p><%= data.location %></p>
        <p>¥<%= data.price %>/泊</p>
        <img
          src="https://picsum.photos/400/300"
          alt=""
          width="400"
          height="300"
        />
        <p class="mt-3"><%= data.description %></p>
        <p class="mt-3">登録者：<%= data.user.name %></p>
        <% if(userId === data.user.id) { %>
        <a href="/campgrounds/<%= data.id %>/edit" class="btn btn-success"
          >編集する</a
        >
        <form action="/campgrounds/<%= data.id %>?_method=DELETE" method="post">
          <button class="btn btn-danger">削除</button>
        </form>
        <% } %>
      </div>
    </div>
    <div class="col">
      <div class="">
        <div class="mb-3">
          <form
            action="/campgrounds/<%= data.id %>/reviews"
            method="post"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="customRange1" class="form-label">レビュー</label>
              <input
                type="range"
                name="rating"
                class="form-range"
                id="customRange1"
                min="1"
                max="5"
              />
            </div>
            <div class="mb-3">
              <label for="body" class="form-label">コメント</label>
              <textarea name="body" class="form-control" id="body"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">投稿する</button>
          </form>
        </div>
        <% for(let review of data.reviews) {%>
        <div class="card mb-3">
          <div class="card-body">
            <p>星<%= review.rating %></p>
            <p><%= review.body %></p>
            <div class="d-flex justify-content-between">
              <small><%= review.createdAt.toLocaleString("ja-JP") %></small>
              <form
                action="/campgrounds/<%= data.id %>/reviews/<%= review.id %>?_method=DELETE"
                method="post"
              >
                <button type="submit" class="btn btn-danger">削除</button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
